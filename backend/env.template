# Database Configuration (MySQL)
# MDP Platform V3.1 - Metadata-Driven Architecture
# 格式: mysql+pymysql://用户名:密码@主机:端口/数据库名
DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/ontology_meta_new

# Legacy database (optional, for migration)
LEGACY_DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/ontology

# Raw Store database (for synced data)
RAW_STORE_DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/mdp_raw_store

# Application Settings
DEBUG=False

# ==========================================
# Elasticsearch Configuration (Full Text Search)
# ==========================================
ELASTICSEARCH_HOST=http://127.0.0.1:9200
ELASTICSEARCH_INDEX_NAME=mdp_text_documents
ELASTICSEARCH_REQUEST_TIMEOUT=30
ELASTICSEARCH_VERIFY_CERTS=False
ELASTICSEARCH_NUMBER_OF_SHARDS=1
ELASTICSEARCH_NUMBER_OF_REPLICAS=0

# ==========================================
# Vector Store Configuration (ChromaDB)
# ==========================================
CHROMA_DB_PATH=data/chroma_vector_store
